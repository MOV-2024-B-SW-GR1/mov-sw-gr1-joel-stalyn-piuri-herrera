<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuscripcionDetailActivity">

    <TextView
        android:id="@+id/txtSuscripcionNombre"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:paddingBottom="16dp"
        android:text="Nombre suscripción"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/btnEditarSuscripcion"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:text="Editar suscripción"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminarSuscripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSuscripcionNombre"
        app:layout_constraintVertical_bias="0.867" />

    <Button
        android:id="@+id/btnEliminarSuscripcion"
        android:layout_width="237dp"
        android:layout_height="45dp"
        android:text="Eliminar suscripción"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
