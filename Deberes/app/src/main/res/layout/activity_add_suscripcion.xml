<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSuscripcionActivity">

    <!-- EditText para ingresar el usuario_id -->
    <EditText
        android:id="@+id/editTextUsuarioId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Usuario ID"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:padding="16dp"/>

    <!-- EditText para ingresar la fecha de inicio -->
    <EditText
        android:id="@+id/editTextFechaInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Inicio (YYYY-MM-DD)"
        app:layout_constraintTop_toBottomOf="@id/editTextUsuarioId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp"/>

    <!-- EditText para ingresar el método de pago -->
    <EditText
        android:id="@+id/editTextMetodoPago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Método de Pago"
        app:layout_constraintTop_toBottomOf="@id/editTextFechaInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp"/>

    <!-- Botón para guardar la suscripción -->
    <Button
        android:id="@+id/buttonGuardarSuscripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Suscripción"
        app:layout_constraintTop_toBottomOf="@id/editTextMetodoPago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
